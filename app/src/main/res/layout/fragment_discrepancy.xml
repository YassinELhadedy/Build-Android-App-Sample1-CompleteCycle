<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_discrepancy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_discrepancy_discrepancy_shipments"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/beige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearlayout_discrepancy_btns_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/beige"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_discrepancy_discrepancy_shipments">

        <Button
            android:id="@+id/btn_discrepancy_remove"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/cairo"
            android:text="@string/btn_discrepancy_remove"
            android:textColor="@color/dark_yellow"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_discrepancy_discrepancy_shipments" />

        <Button
            android:id="@+id/btn_discrepancy_refresh"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/cairo_semibold"
            android:text="@string/btn_discrepancy_refreshsheet"
            android:textColor="@color/dark_yellow"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_discrepancy_remove"
            app:layout_constraintVertical_bias="0.288" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>