<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_black"
    android:id="@+id/nocurrent_sheet_view"
    tools:context="com.transporter.streetglide.ui.nocurrentsheet.NoCurrentSheetActivity">

    <TextView
        android:id="@+id/txt_run_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="@string/txtview_nocurrentsheet_nosheet"
        android:textColor="@color/dark_yellow"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_nocurrentsheet_refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_nocurrentsheet_refresh"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/yellow_rectangle"
        android:fontFamily="@font/cairo_semibold"
        android:text="@string/btn_nocurrentsheet_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_run_sheet_title" />
</android.support.constraint.ConstraintLayout>
